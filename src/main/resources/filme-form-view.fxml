<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane hgap="10" vgap="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.badcine.view.FilmeFormController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label text="Título:" GridPane.rowIndex="0" />
    <TextField fx:id="tituloField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Gênero:" GridPane.rowIndex="1" />
    <TextField fx:id="generoField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Ano de Lançamento:" GridPane.rowIndex="2" />
    <TextField fx:id="anoField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Preço (R$):" GridPane.rowIndex="3" />
    <TextField fx:id="precoField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Estoque:" GridPane.rowIndex="4" />
    <TextField fx:id="estoqueField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Nome da Imagem:" GridPane.rowIndex="5" />
    <TextField fx:id="posterPathField" promptText="ex: oppenheimer.jpg" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <HBox alignment="CENTER_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <children>
            <Button onAction="#handleCancelar" text="Cancelar" />
            <Button onAction="#handleSalvar" styleClass="botao-confirmar" text="Salvar" />
        </children>
    </HBox>
</GridPane>