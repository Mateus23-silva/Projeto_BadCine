<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.badcine.view.AdminDashboardController">
    <top>
        <Label styleClass="titulo-principal" text="Painel do Administrador" BorderPane.alignment="CENTER">
            <font><Font size="24.0" /></font>
            <padding>
                <Insets bottom="10" top="10" />
            </padding>
        </Label>
    </top>
    <center>
        <TableView fx:id="tabelaFilmes" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colunaId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colunaTitulo" prefWidth="320.0" text="Título" />
                <TableColumn fx:id="colunaGenero" prefWidth="150.0" text="Gênero" />
                <TableColumn fx:id="colunaAno" prefWidth="75.0" text="Ano" />
                <TableColumn fx:id="colunaPreco" prefWidth="120.0" text="Preço (R$)" />
                <TableColumn fx:id="colunaEstoque" prefWidth="75.0" text="Estoque" />
            </columns>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="60.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#handleAdicionarFilme" styleClass="botao-confirmar" text="Adicionar Novo Filme" />
                <Button onAction="#handleEditarFilme" text="Editar Selecionado" />
                <Button onAction="#handleRemoverFilme" text="Remover Selecionado" />
                <Button onAction="#handleLogout" text="Logout" />
            </children>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>