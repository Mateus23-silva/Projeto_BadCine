<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.badcine.view.CarrinhoController">
    <top>
        <Label styleClass="titulo-principal" text="Meu Carrinho" BorderPane.alignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
            <padding>
                <Insets bottom="10" top="10" />
            </padding>
        </Label>
    </top>
    <center>
        <TableView fx:id="tabelaCarrinho">
            <columns>
                <TableColumn fx:id="colunaTitulo" prefWidth="350.0" text="Título" />
                <TableColumn fx:id="colunaPreco" prefWidth="150.0" text="Preço (R$)" />
            </columns>
            <BorderPane.margin>
                <Insets left="10" right="10" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label fx:id="labelTotal" text="Total: R$ 0,00">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button onAction="#handleRemoverItem" text="Remover Item Selecionado" />
                    <Button onAction="#handleVoltarCatalogo" text="Continuar Comprando" />
                    <Button onAction="#handleFinalizarAluguel" styleClass="botao-confirmar" text="Finalizar Aluguel" />
                </HBox>
            </children>
        </VBox>
    </bottom>
</BorderPane>