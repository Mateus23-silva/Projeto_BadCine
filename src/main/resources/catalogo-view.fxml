<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="950.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.badcine.view.CatalogoController">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <children>
                <Label styleClass="titulo-principal" text="Catálogo de Filmes">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" maxWidth="600.0" spacing="10">
                    <children>
                        <Label text="Buscar Filme:" />
                        <TextField fx:id="buscaField" promptText="Digite o título do filme..." HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <TilePane fx:id="gradeDeFilmes" hgap="20" vgap="20">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button onAction="#handleLogout" text="Logout" />
                <Button fx:id="verCarrinhoButton" onAction="#handleVerCarrinho" text="Ver Carrinho (0)" />
            </children>
            <padding>
                <Insets bottom="10.0" right="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>